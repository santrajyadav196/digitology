<% layout ('layouts/boilerplate') %> 
   <div class="row">
       <div class="container">
           <div class="col-6 offset-3">
           <h3 class="text-center">Edit Task</h3>
          <form action="/tasks/<%= task._id %>?_method=PUT" method="POST">
         <div class='mb-3'>
        <label class='form-label' for="name">Task Name:</label>
        <input class='form-control' type="text" name="name" id="name" placeholder="task name" value="<%= task.name %>">
        </div>
         <div class='mb-3'>
        <label class='form-label' for="category">Select Category:</label>
        <select class='form-control' name="category" id="category">
            <% for(let category of categories) { %> 
                <option value="<%= category %>" <%= task.category === category ? 'selected' : '' %> ><%= category%> </option>
            <% } %> 
        </select>
        </div>
        <div class="mb-3">
        <label class='form-label' for ="description">Description:</label>
         <textarea class='form-control' type="text" id="description" name="description" 
                placeholder="Descrition" cols="30" rows="3"><%= task.description %></textarea>
        </div>
        <div class="mb-3">
        <button class="btn btn-danger">Submit</button>
        </div>
    </form>
       <div class="mb-3">
            <a class="btn btn-primary" href="/tasks/<%= task._id %>">Back</a>
           <a class="btn btn-info" href="/tasks">All Tasks</a>
       </div>
       </div>
       </div>
   </div>